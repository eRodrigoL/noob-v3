// tsconfig.json
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@docs/*": ["docs/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@theme/*": ["theme/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "declarations.d.ts"]
}
